<!-- Notice Message -->
<p class="text-green-600 font-semibold mb-4"><%= notice %></p>

<!-- Render Document -->
<div class="bg-gray-100 p-6 rounded-lg shadow-md">
  <h1><%= @document.title %></h1>
  <%= @document.description %>
</div>

<!-- Action Links -->
<div class="mt-6 flex items-center space-x-4">
  <%= link_to "Edit this document", edit_document_path(@document), class: "text-blue-500 hover:underline" %>
  <span class="text-gray-400">|</span>
  <%= link_to "Back to documents", documents_path, class: "text-blue-500 hover:underline" %>

  <%= button_to "Destroy this document", @document, method: :delete, 
      class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600" %>
</div>
